{
  "parser": "babel-eslint",
  "extends": [
    "@equisoft/eslint-config",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype"
  ],
  "env": {
    "browser": true,
    "mocha": true
  },
  "globals": {
    "dataLayer": true,
    "console": true,
    "google": true,
    "moment": true,
    "tinymce": true,
    "_": true,
    "$": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
